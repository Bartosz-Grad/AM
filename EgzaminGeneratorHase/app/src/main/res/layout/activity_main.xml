<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <EditText
        android:id="@+id/editName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Imię" />

    <EditText
        android:id="@+id/editForename"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Nazwisko" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stanowisko" />

    <Spinner
        android:id="@+id/stanowisko"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/editZnaki"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Ile znaków"
        android:inputType="number" />

    <CheckBox
        android:id="@+id/checkBigSmall"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Małe i wielkie litery"
        android:checked="true"/>

    <CheckBox
        android:id="@+id/checkNumbers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cyfry" />

    <CheckBox
        android:id="@+id/checkSpecial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Znaki specjalne" />

    <Button
        android:id="@+id/buttonGenerate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Generuj hasło" />

    <Button
        android:id="@+id/buttonConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Zatwierdz" />
</LinearLayout>